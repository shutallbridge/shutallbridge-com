---
import { type ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { type HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"a"> {
  coverSide?: "left" | "right";
  src: ImageMetadata;
  alt: string;
  tag: string;
  title: string;
  description: string;
}

const {
  coverSide = "left",
  src,
  alt,
  tag,
  title,
  description,
  ...rest
} = Astro.props;
---

<a
  class:list={[
    "flex flex-col gap-y-6 md:gap-x-6 cursor-pointer",
    { "md:flex-row": coverSide === "left" },
    { "md:flex-row-reverse": coverSide === "right" },
  ]}
  {...rest}
>
  <div class="h-80 w-full rounded-sm overflow-hidden">
    <Image
      src={src}
      alt={alt}
      class="w-full h-full object-cover object-top-left transition-transform hover:scale-105 ease-in-out duration-300"
    />
  </div>
  <div class="w-full space-y-5">
    <p class="text-sm text-gray-500">{tag}</p>
    <div class="space-y-3">
      <h2 class="text-lg font-medium">
        {title}
      </h2>
      <p class="text-gray-500">
        {description}
      </p>
    </div>
  </div>
</a>
