---
import { type ImageMetadata } from "astro";
import { Image } from "astro:assets";
import {
  MediaDisplay,
  type MediaDisplayProps,
} from "@/components/media-display";

export interface Props extends MediaDisplayProps {
  src: ImageMetadata;
  alt: string;
}

const { src, alt, ...rest } = Astro.props;
---

<MediaDisplay {...rest}>
  <Image src={src} alt={alt} />
</MediaDisplay>
