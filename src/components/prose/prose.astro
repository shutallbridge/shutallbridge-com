---
import { type HTMLTag, type Polymorphic } from "astro/types";

export type Props<TTag extends HTMLTag> = Polymorphic<{ as: TTag }>;

const { as: Tag = "div" } = Astro.props;
---

<style is:global>
  /* https://tailwindcss.com/docs/functions-and-directives#reference-directive */
  @reference "../../styles/global.css";

  .prose {
    /* default element spacing */
    & > * {
      @apply mb-4;
    }

    /* remove default spacing from last element */
    & > *:last-child {
      @apply mb-0;
    }

    & > h2 {
      @apply text-2xl;
    }

    & strong {
      @apply font-bold;
    }

    & em {
      @apply italic;
    }

    & > ul {
      @apply list-disc;
    }

    & > ol {
      @apply list-decimal;
    }

    & > ul,
    & > ol {
      @apply pl-5;
    }

    & li {
      @apply mb-2;
    }

    /* extra space around headings */
    & > * + h2 {
      @apply mt-10 mb-4;
    }

    /* extra space around image displays */
    & > * + [data-component="full-bleed"] > [data-component="image-display"],
    & > * + [data-component="image-display"] {
      @apply mt-12 mb-12;
    }
  }
</style>

<Tag class="prose">
  <slot />
</Tag>
